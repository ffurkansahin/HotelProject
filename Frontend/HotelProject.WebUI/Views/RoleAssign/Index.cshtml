@model List<HotelProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController/_AdminLayout.cshtml";
}

<h1>Kullanıcı Listesi</h1>

<div class="table-responsive">
    <table class="table table-xs mb-0">
        <thead>
            <tr>
                <th>Kullanıcı</th>
                <th>Rol Ata</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageUrl" class="rounded-circle mr-3" alt="">@item.Name @item.Surname</td>

                    <td> <a href="/RoleAssign/AssignRole/@item.Id" class="btn btn-warning">Rol Ata</td>
                </tr>
            }
        </tbody>
    </table>
</div>

